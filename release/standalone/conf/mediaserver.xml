<mediaserver>
	<network>
		<bindAddress>${sys:mms.bind.address}</bindAddress>
		<externalAddress>${sys:mms.external.address}</externalAddress>
		<webRtcAddress>${sys:mms.webrtc.address}</webRtcAddress>
		<network>${sys:mms.local-network.address}</network>
		<subnet>${sys:mms.local.subnet}</subnet>
		<sbc>false</sbc>
	</network>

	<controller protocol="mgcp">
		<address>${sys:mms.bind.address}</address>
		<port>2427</port>
		<endpoints>
			<endpoint name="mobicents/bridge/" class="org.mobicents.media.server.mgcp.endpoint.BridgeEndpoint" poolSize="50" />
			<endpoint name="mobicents/ivr/" class="org.mobicents.media.server.mgcp.endpoint.IvrEndpoint" poolSize="50" />
			<endpoint name="mobicents/cnf/" class="org.mobicents.media.server.mgcp.endpoint.ConferenceEndpoint" poolSize="50" />
		</endpoints>
		<configuration>mgcp-conf.xml</configuration>
		<poolSize>25</poolSize>
	</controller>

	<media>
		<timeout>0</timeout>
		<lowPort>10000</lowPort>
		<highPort>20000</highPort>
		<jitterBuffer size="50" />
		<codecs>
			<codec name="pcmu" />
			<codec name="pcma" />
			<codec name="opus" />
			<codec name="l16_16" />
			<codec name="l16_24" />
		</codecs>
	</media>

	<resources>
		<localConnection poolSize="100" />
		<remoteConnection poolSize="100" />
		<player poolSize="100" />
		<recorder poolSize="100" />
		<dtmfDetector poolSize="100" dbi="-35" rfc2833Only="true" />
		<dtmfGenerator poolSize="100" toneVolume="-20" toneDuration="80" />
		<signalDetector poolSize="0" />
		<signalGenerator poolSize="0" />
	</resources>
</mediaserver>